<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@color/gray"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvPhoneName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/btDeletePhone"
        android:layout_marginTop="2dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="Merk Phone"
        android:fontFamily="@font/googlesans_medium"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btDeletePhone"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="8dp"

        android:text="x"
        android:fontFamily="@font/googlesans_medium"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:backgroundTint="@android:color/holo_red_dark" />

    <TextView
        android:id="@+id/tvPhoneSpesifikasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPhoneName"
        android:layout_marginTop="36dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="Spesifikasi Phone"
        android:fontFamily="@font/googlesans_medium"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvPhoneHarga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvPhoneName"
        android:layout_marginTop="2dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:text="Harga Phone"
        android:fontFamily="@font/googlesans_medium"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tvPhoneSpesifikasi"
        android:layout_marginTop="0dp"
        android:background="@android:color/holo_blue_dark" />


</RelativeLayout>